# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi
{% if use_keychain %}

# setup keychain
eval `{{ keychain_bin }} --eval --agents ssh id_rsa`
{% endif %}

# set TERMINAL to termite if it exists
which termite > /dev/null 2>&1

if [ $? -eq 0 ]; then
    export TERMINAL=termite
fi
