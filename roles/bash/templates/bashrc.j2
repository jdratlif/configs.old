# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# User specific aliases and functions
PROMPT_COMMAND=my_prompt

my_prompt() {
    local exit_code="$?"
    PS1="(${exit_code}) \[\033[01;32m\]\u@\H\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\] \$ "

    if [ ! -z $VIRTUAL_ENV ]; then
        venv=$(basename $VIRTUAL_ENV)
        PS1="($venv) $PS1"
    fi
}

# use vi line editing mode
set -o vi
bind -m vi-insert "\C-l":clear-screen

# history options
shopt -s histappend
shopt -s histverify

HISTTIMEFORMAT="%h %d %H:%M:%S "
HISTSIZE=10000
HISTFILESIZE=10000
HISTCONTROL="ignorespace:erasedups"

SUDO_EDITOR=vim

PAGER='less -X'
LIBVIRT_DEFAULT_URI='qemu:///system'

# begin local path augments
{% if path_local_pre is defined %}
PATH="{{ path_local_pre | join(':') }}:$PATH"
{% endif %}
{% if path_local_post is defined %}
PATH="$PATH:{{ path_local_post | join(':') }}"
{% endif %}
# end local path augments

# begin local exports
{% if exports is defined %}
{% for item in exports | dictsort %}
{{ item[0] }}='{{ item[1] }}'
{% endfor %}
{% endif %}
# end local exports

# begin local functions
{% for item in functions | dictsort %}
function {{ item[0] }} {
{% for line in item[1] %}
    {{ line }}
{% endfor %}
}
{% endfor %}
# end local functions

# begin local aliases
{% for item in aliases | dictsort %}
alias {{ item[0] }}='{{ item[1] }}'
{% endfor %}
# end aliases
